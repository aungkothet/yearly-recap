rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // For Project 1: Checks based on the User's UID
    function isUidOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // For Project 2: Checks based on the User's Email
    function isEmailOwner(userEmail) {
      return isAuthenticated() && request.auth.token.email == userEmail;
    }

    // --- PROJECT 1: USERS-RECAP STRUCTURE ---
    match /users-recap/{userId} {
      allow read, write: if isUidOwner(userId);
      
      match /goals/{goalId} {
        allow read, write: if isUidOwner(userId);
        allow create: if isUidOwner(userId) 
          && request.resource.data.keys().hasAll(['title', 'category', 'status', 'year'])
          && request.resource.data.title is string
          && request.resource.data.category in ['Health', 'Career', 'Personal', 'Financial', 'Education', 'Relationships']
          && request.resource.data.status in ['not-started', 'in-progress', 'completed']
          && request.resource.data.year is int;
      }
      
      match /recaps/{recapId} {
        allow read, write: if isUidOwner(userId);
        allow create: if isUidOwner(userId)
          && request.resource.data.keys().hasAll(['title', 'content', 'type', 'date'])
          && request.resource.data.title is string
          && request.resource.data.content is string
          && request.resource.data.type in ['Daily', 'Weekly', 'Monthly', 'Yearly']
          && request.resource.data.date is timestamp;
      }
      
      match /transactions/{transactionId} {
        allow read, write: if isUidOwner(userId);
        allow create: if isUidOwner(userId)
          && request.resource.data.keys().hasAll(['description', 'amount', 'type', 'category', 'date'])
          && request.resource.data.description is string
          && request.resource.data.amount is number
          && request.resource.data.amount >= 0
          && request.resource.data.type in ['income', 'expense']
          && request.resource.data.category is string
          && request.resource.data.date is timestamp;
      }
    }

    // --- PROJECT 2: USER EMAIL STRUCTURE ---
    match /users/{userEmail} {
      // Access to accounts subcollection
      match /accounts/{document=**} {
        allow read, write: if isEmailOwner(userEmail);
      }
      
      // Access to transactions subcollection
      match /transactions/{document=**} {
        allow read, write: if isEmailOwner(userEmail);
      }
    }

    // --- GLOBAL DENY ---
    // This acts as a fallback for any path not explicitly matched above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}