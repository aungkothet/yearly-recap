rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User document rules
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if isOwner(userId);
      
      // Goals subcollection
      match /goals/{goalId} {
        // Users can only access their own goals
        allow read, write: if isOwner(userId);
        
        // Validate goal data structure
        allow create: if isOwner(userId) 
          && request.resource.data.keys().hasAll(['title', 'category', 'status', 'year'])
          && request.resource.data.title is string
          && request.resource.data.category in ['Health', 'Career', 'Personal', 'Financial', 'Education', 'Relationships']
          && request.resource.data.status in ['not-started', 'in-progress', 'completed']
          && request.resource.data.year is int;
      }
      
      // Recaps subcollection
      match /recaps/{recapId} {
        // Users can only access their own recaps
        allow read, write: if isOwner(userId);
        
        // Validate recap data structure
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['title', 'content', 'type', 'date'])
          && request.resource.data.title is string
          && request.resource.data.content is string
          && request.resource.data.type in ['Daily', 'Weekly', 'Monthly', 'Yearly']
          && request.resource.data.date is timestamp;
      }
      
      // Transactions subcollection
      match /transactions/{transactionId} {
        // Users can only access their own transactions
        allow read, write: if isOwner(userId);
        
        // Validate transaction data structure
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['description', 'amount', 'type', 'category', 'date'])
          && request.resource.data.description is string
          && request.resource.data.amount is number
          && request.resource.data.amount >= 0
          && request.resource.data.type in ['income', 'expense']
          && request.resource.data.category is string
          && request.resource.data.date is timestamp;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
